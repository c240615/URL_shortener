<div class="container" style="width: 18rem;">
  <img
    class="card-img-top justify-content-center mt-5 pt-5"
    src="../images/url.png"
    alt="url"
  />
</div>

<div class="container mt-5">
  <table class="m-5 table table-responsive justify-content-center">
    <thead>
      <tr>
        <th scope="col">Original URL</th>
        <th scope="col">Short URL</th>        
      </tr>
    </thead>
    {{#each shortUrls}}
      <form action="/shortURL" method="Post">
        <tbody>
          <tr>
            <td>
              <a href="{{this.originalUrl}}">{{this.originalUrl}}</a>
            </td>
            <td>
              <a
                href="{{this.shortUrl}}" 
              >https://localhost:3000/{{this.shortUrl}}
              </a>            
            </td>
          </tr>
        </tbody>
      </form>
    {{/each}}
  </table>
  <div class="d-flex flex-row-reverse">
    <a class="" href="/">回上一頁</a>
  </div>  
</div>
